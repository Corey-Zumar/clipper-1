# Builds an image with tensorflow gpu version 1.4 + Clipper RPC

FROM czumar/tf1-4:latest

RUN mkdir -p /model \
    && apt-get update \
    && apt-get install -y libzmq-dev \
    && apt-get install -y python-pip \
    && pip install pyzmq

COPY rpc.py __init__.py /container/

# vim: set filetype=dockerfile:
